<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="品牌"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/input_brand_no"
                style="@style/LoginEdittextStyle"
                android:hint="请输入品牌编号"
                android:background="@color/white"
                />
            <ImageView
                android:id="@+id/image_query_ic1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:layout_marginLeft="2dp"
                android:clickable="true"
                android:background="@drawable/query_ic_selector"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="货号"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/input_goods_no"
                style="@style/LoginEdittextStyle"
                android:hint="请输入商品货号"
                android:background="@color/white"
                />
            <ImageView
                android:id="@+id/image_query_ic2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:layout_marginLeft="2dp"
                android:clickable="true"
                android:background="@drawable/query_ic_selector"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="单价:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/goods_unit_price"
                style="@style/LoginEdittextStyle"
                android:text="0.0"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:background="@color/white"
                />
            <TextView
                style="@style/LoginTextStyle"
                android:text="数量:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/goods_amount"
                style="@style/LoginEdittextStyle"
                android:text="0"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:background="@color/white"
                />
            <TextView
                style="@style/LoginTextStyle"
                android:text="金额:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/goods_money"
                style="@style/LoginEdittextStyle"
                android:text="0"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:background="@color/white"
                />

            <Button
                android:id="@+id/btn_add"
                style="@style/LoginBtnStyle"
                android:layout_width="45dip"
                android:layout_height="28dip"
                android:padding="0dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/btn_consume_selector"
                android:textSize="13sp"
                android:text="添加"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
</LinearLayout>