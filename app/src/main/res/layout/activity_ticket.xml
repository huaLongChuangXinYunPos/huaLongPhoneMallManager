<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    tools:context=".activity.TicketManageActivity"
    >

    <RelativeLayout
        android:id="@+id/title"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_title" >

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:background="@drawable/back_image_selector"
            />

        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="开票管理"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="品牌"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/input_brand_no"
                style="@style/LoginEdittextStyle"
                android:hint="请输入品牌编号"
                android:background="@color/white"
                />
            <ImageView
                android:id="@+id/image_query_ic1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:layout_marginLeft="2dp"
                android:clickable="true"
                android:background="@drawable/query_ic_selector"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="货号"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/input_goods_no"
                style="@style/LoginEdittextStyle"
                android:hint="请输入商品货号"
                android:background="@color/white"
                />
            <ImageView
                android:id="@+id/image_query_ic2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:layout_marginLeft="2dp"
                android:clickable="true"
                android:background="@drawable/query_ic_selector"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="单价:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/goods_unit_price"
                style="@style/LoginEdittextStyle"
                android:hint="输入单价"
                android:textSize="14sp"
                android:background="@color/white"
                />
            <TextView
                style="@style/LoginTextStyle"
                android:text="数量:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/goods_amount"
                style="@style/LoginEdittextStyle"
                android:hint="输入数量"
                android:textSize="14sp"
                android:background="@color/white"
                />
            <TextView
                style="@style/LoginTextStyle"
                android:text="金额:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/goods_money"
                style="@style/LoginEdittextStyle"
                android:hint="输入金额"
                android:textSize="14sp"
                android:background="@color/white"
                />

            <Button
                android:id="@+id/btn_add"
                style="@style/LoginBtnStyle"
                android:layout_width="45dip"
                android:layout_height="28dip"
                android:padding="0dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/btn_consume_selector"
                android:textSize="13sp"
                android:text="添加"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/lowGray"
        >
        <include
            layout="@layout/tickets_managment_list_title"
            />
        <ListView
            android:id="@+id/tickets_managment_goods_list"
            android:dividerHeight="1dp"
            android:divider="@color/login_bg"
            android:headerDividersEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:footerDividersEnabled="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/login_bg"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/save_and_print"
                style="@style/LoginBtnStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="保存打印"
                />
            <Button
                android:id="@+id/tickets_up_info_btn"
                style="@style/LoginBtnStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="信息上传"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:id="@+id/main_bottom_guizuno_info"
                style="@style/MainTextViewStyle"
                android:text="柜组编号: 12023"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/main_botton_guizu_mingcheng"
                style="@style/MainTextViewStyle"
                android:text="柜组名称:名称"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:id="@+id/main_bottom_mermberno_info"
                style="@style/MainTextViewStyle"
                android:text="操作员编号: 12023"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/main_bottom_mermber_mingcheng"
                style="@style/MainTextViewStyle"
                android:text="操作员姓名:名称"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
