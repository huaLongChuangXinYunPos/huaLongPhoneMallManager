<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    tools:context=".tickets.activity.AddTicketInfoActivity"
    >
    <RelativeLayout
        android:id="@+id/title"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_title" >

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:background="@drawable/back_image_selector"
            />
        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="开票信息录入"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/lowGray"
        >

        <include
            layout="@layout/tickets_update_info_list_title"
            />

        <ListView
            android:id="@+id/tickets_managment_goods_list"
            android:dividerHeight="1dp"
            android:divider="@color/login_bg"
            android:headerDividersEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:footerDividersEnabled="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="品牌"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edit_account"
                style="@style/LoginEdittextStyle"
                android:hint="请输入品牌编号"
                android:background="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="货号"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edit_password"
                style="@style/LoginEdittextStyle"
                android:hint="请输入商品货号"
                android:background="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/LoginTextStyle"
                android:text="金额"
                android:textSize="25sp"
                android:textColor="@color/black"
                />
            <EditText
                style="@style/LoginEdittextStyle"
                android:hint="请输入商品金额"
                android:background="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/login_bg"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                style="@style/LoginBtnStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="添加"
                />
            <Button
                style="@style/LoginBtnStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="完成"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    style="@style/MainTextViewStyle"
                    android:text="柜组编号: 12023"
                    android:textSize="18sp"
                    />

                <TextView
                    style="@style/MainTextViewStyle"
                    android:text="柜组名称:名称"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    style="@style/MainTextViewStyle"
                    android:text="操作员编号: 12023"
                    android:textSize="15sp"
                    />

                <TextView
                    style="@style/MainTextViewStyle"
                    android:text="操作员姓名:名称"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
