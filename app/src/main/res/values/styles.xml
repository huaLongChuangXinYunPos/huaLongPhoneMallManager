<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录页   textView样式-->
    <style name="LoginTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--登录界面   中 editText的  样式-->
    <style name="LoginEdittextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/highGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/highGray</item>
    </style>

    <!--登录  界面主界面中btn样式-->
    <style name="LoginBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--主界面中  底部textView的样式-->
    <style name="MainTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#748574</item>
    </style>

    <!--各个界面中  listitem的字体样式 android:layout_width="0dip"-->
    <style name="ListTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
