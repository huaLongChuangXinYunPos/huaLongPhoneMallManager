<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录页   textView样式-->
    <style name="LoginTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--登录界面   中 editText的  样式-->
    <style name="LoginEdittextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/highGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/highGray</item>
        <item name="android:padding">3dip</item>
        <item name="android:background">@drawable/dialog_edt_bg_selector</item>
    </style>

    <!--登录  界面主界面中btn样式-->
    <style name="LoginBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--主界面中  底部textView的样式-->
    <style name="MainTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#748574</item>
    </style>

    <!--各个界面中  listitem的字体样式 android:layout_width="0dip"-->
    <style name="ListTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--主界面  中dialog的样式-->
    <style name="LoginAlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!--dialog  中btn样式-->
    <style name="LoginDialogBtnStyle">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!--进度条样式-->
    <style name="ProDialogStyle"  parent="@android:style/Theme.Dialog">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
